generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Agent {
  id           String   @id
  userId       String
  name         String
  type         String   @default("trading")
  publicKey    String?
  stake        Int      @default(0)
  transactions Int      @default(0)
  disputes     Int      @default(0)
  reputation   Int      @default(100)
  status       String   @default("active")
  createdAt    DateTime @default(now())
  updatedAt    DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model ApiKey {
  id         String    @id
  userId     String
  name       String?
  key        String    @unique
  keyHash    String
  status     String    @default("active")
  lastUsedAt DateTime?
  createdAt  DateTime  @default(now())
  User       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([keyHash])
  @@index([userId])
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Subscription {
  id               String    @id
  userId           String    @unique
  tier             String    @default("free")
  stripeCustomerId String?
  stripeSubId      String?
  currentPeriodEnd DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime
  User             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String        @id
  email         String        @unique
  emailVerified DateTime?
  name          String?
  image         String?
  passwordHash  String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime
  Account       Account[]
  Agent         Agent[]
  ApiKey        ApiKey[]
  Session       Session[]
  Subscription  Subscription?
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model TrialsAttempt {
  id        String   @id @default(cuid())
  wallet    String   @unique
  startedAt DateTime @default(now())
  completed Boolean  @default(false)
  passed    Boolean  @default(false)
  score     Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("trials_attempts")
}

model TrialsCompletion {
  id            String   @id @default(cuid())
  wallet        String   @unique
  score         Int
  completedAt   DateTime @default(now())
  signature     String
  refCode       String   @unique
  referredBy    String?
  referralCount Int      @default(0)
  shared        Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("trials_completions")
}
